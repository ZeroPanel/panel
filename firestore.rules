
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to the nodes collection
    match /nodes/{nodeId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
